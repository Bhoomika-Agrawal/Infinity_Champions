class Solution {
    public int longestOnes(int[] nums, int k) {
        int l=0,r=0,zero=0,max_len=0;
        while(r<nums.length){
            if(nums[r]==0){
                zero++;
            }
            while(zero>k){
                if(nums[l]==0){
                    zero--;
                }
                l++;
            }
            max_len=Math.max(max_len,r-l+1);
            r++;
        }
        return max_len;
    }
}
